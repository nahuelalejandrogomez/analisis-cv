{
  "name": "lever-cv-evaluator-backend",
  "version": "1.0.0",
  "description": "Backend for CV evaluation with Lever API and OpenAI",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "build": "echo 'No build required'",
    "dev": "nodemon src/server.js",
